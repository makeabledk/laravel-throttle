<?php

namespace Makeable\Throttle;

trait Throttling
{
    /**
     * @var array
     */
    public $throttleOptions;

    /**
     * @return Dispatcher
     */
    public function configure()
    {
        return $this->throttle();
    }

    /**
     * @return Dispatcher
     */
    public function throttle()
    {
        return Dispatcher::job($this, config('queue.default') === 'redis');
    }
}
